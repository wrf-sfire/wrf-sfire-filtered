# for regression testing to check if the results are the same on various number of processors
# build with configure -d and SM+DM
# copy hill to hill-1x1 etc.
# source this
# rm -f hill-?x?/{rsl.*,*_*.txt wrfo*,wrfr*}  # to grab for cleanup
cd hill-1x1; rm -f rsl.* *_*.txt wrfo* wrfr* ; echo | mpirun_rsh -np 1 -hostfile mach OMP_NUM_THREADS=1 wrf.exe >& wrf.log  & cd ..
cd hill-1x6; rm -f rsl.* *_*.txt wrfo* wrfr* ; echo | mpirun_rsh -np 1 -hostfile mach OMP_NUM_THREADS=6 wrf.exe >& wrf.log  & cd ..
cd hill-6x1; rm -f rsl.* *_*.txt wrfo* wrfr* ; echo | mpirun_rsh -np 6 -hostfile mach OMP_NUM_THREADS=1 wrf.exe >& wrf.log  & cd ..
cd hill-3x2; rm -f rsl.* *_*.txt wrfo* wrfr* ; echo | mpirun_rsh -np 3 -hostfile mach OMP_NUM_THREADS=2 wrf.exe >& wrf.log  & cd ..
cd hill-2x3; rm -f rsl.* *_*.txt wrfo* wrfr* ; echo | mpirun_rsh -np 2 -hostfile mach OMP_NUM_THREADS=3 wrf.exe >& wrf.log  & cd ..
cd hill-2x1; rm -f rsl.* *_*.txt wrfo* wrfr* ; echo | mpirun_rsh -np 2 -hostfile mach OMP_NUM_THREADS=1 wrf.exe >& wrf.log  & cd ..
cd hill-1x2; rm -f rsl.* *_*.txt wrfo* wrfr* ; echo | mpirun_rsh -np 1 -hostfile mach OMP_NUM_THREADS=2 wrf.exe >& wrf.log  & cd ..
