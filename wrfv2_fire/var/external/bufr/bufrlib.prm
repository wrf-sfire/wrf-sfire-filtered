!-----------------------------------------------------------------------
!	Maximum number of BUFR files that can be connected to the
!	BUFRLIB software (for reading or writing) at any one time.

	PARAMETER ( NFILES = 16 )
!-----------------------------------------------------------------------
!	Maximum length (in bytes) of a BUFR message that can be
!	read or written by the BUFRLIB software.

	PARAMETER ( MXMSGL = 50000 )
	PARAMETER ( MXMSGLD4 = MXMSGL/4 )
!-----------------------------------------------------------------------
!	Maximum number of Section 3 FXY descriptors that can be
!	written into a BUFR message by the BUFRLIB software.
!	(NOTE: This parameter must also be identically defined 
!	       within "bufrlib.h" for use by several C routines!)

	PARAMETER ( MAXNC = 300 )
!-----------------------------------------------------------------------
!	Maximum number of default Section 0 or Section 1 values
!	that can be overwritten within a BUFR message by the
!	BUFRLIB software.

	PARAMETER ( MXS01V = 10 )
!-----------------------------------------------------------------------
!	Maximum number of data values per subset in a compressed
!	BUFR message.

	PARAMETER ( MXCDV = 2000 )
!-----------------------------------------------------------------------
!	Maximum number of subsets in a compressed BUFR message.

	PARAMETER ( MXCSB = 4000 )
!-----------------------------------------------------------------------
!	Maximum number of entries in the internal BUFR Table A.

	PARAMETER ( MAXTBA = 120 )
!-----------------------------------------------------------------------
!	Maximum number of entries in the internal BUFR Table B.

	PARAMETER ( MAXTBB = 500 )
!-----------------------------------------------------------------------
!	Maximum number of entries in the internal BUFR Table D.

	PARAMETER ( MAXTBD = 500 )
!-----------------------------------------------------------------------
!	Maximum number of child descriptors that can be included
!       within the sequence definition of a Table D descriptor.
!	(NOTE: This value does *not* need to take into account
!	       the recursive resolution of any child descriptors
!	       which may themselves be Table D descriptors!)

	PARAMETER ( MAXCD = 250 )
!-----------------------------------------------------------------------
!	Maximum number of entries in the internal jump/link table.

	PARAMETER ( MAXJL = 20000 )
!-----------------------------------------------------------------------
!	Maximum number of entries in the internal string cache.

	PARAMETER ( MXS = 1000 )
!-----------------------------------------------------------------------
!	Maximum number of BUFR messages that can be stored within
!	internal memory.

	PARAMETER ( MAXMSG = 200000 )
!-----------------------------------------------------------------------
!	Maximum number of bytes that can be used to store BUFR
!	messages within internal memory.

	PARAMETER ( MAXMEM = 50000000 )
!-----------------------------------------------------------------------
!	Maximum number of bytes that can be copied between BUFR
!	messages within internal memory.

	PARAMETER ( MXIMB = 50000 )
!-----------------------------------------------------------------------
!	Define the BUFRLIB "missing" value.

	REAL*8	BMISS
	PARAMETER ( BMISS = 10E10 )
!-----------------------------------------------------------------------
