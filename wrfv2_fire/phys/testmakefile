    wrf_fakes.o

util_test_main.o: module_fr_sfire_util.o

util_test_prog.exe: $(UTIL_OBJ)
	$(FC) -o util_test_prog.exe $(UTIL_OBJ)

util_test: util_test_prog.exe
	./util_test_prog.exe

